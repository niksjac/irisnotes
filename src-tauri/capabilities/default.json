{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:path:default",
    "fs:allow-read-text-file",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPCONFIG/**"
        }
      ]
    }
  ]
}
