{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
    "permissions": [
    "core:default",
    "opener:default",
    "opener:allow-open-path",
    "core:path:default",
    "window-state:default",
    "notification:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPCONFIG/**"
        }
      ]
    }
  ]
}
