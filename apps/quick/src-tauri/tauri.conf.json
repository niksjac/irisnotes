{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "IrisNotes Quick",
  "identifier": "com.irisnotes.quick",
  "version": "1.0.0",
  "build": {
    "beforeDevCommand": "pnpm run dev:frontend",
    "devUrl": "http://localhost:3333",
    "beforeBuildCommand": "pnpm run build:frontend",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "IrisNotes Quick Search",
        "label": "main",
        "width": 1100,
        "height": 450,
        "center": true,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": true,
        "visible": false,
        "focus": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "dmg", "nsis"],
    "icon": ["icons/icon.png"]
  },
  "plugins": {}
}
